#include <iostream>

using namespace std;

int main() {
    unsigned long long n, m, s;
    cin >> n >> m;
    if (n > m) {
        s = ((m-1)*(-m+2*n) + (m-1)*(m-2))/2;
    }
    else if (m > n) {
        s = ((n-1)*n + (n-1)*(2*m-n-2))/2;
    }
    else
        s = ((n-1)*n + (m-1)*(m-2))/2;
    cout << s;
    return 0;
}
